<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/notification_list">
    <TextView
        android:id="@+id/noty_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification title"
        android:textSize="15sp"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/noty_option"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:layout_toRightOf="@id/noty_title"
        android:layout_marginLeft="210dp"
        android:textSize="15sp"
        android:background="@drawable/options"/>
    <TextView
        android:id="@+id/noty_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/noty_title"
        android:text="Notification Description"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/noty_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/noty_description"
        android:text="DD-MM-YYYY"
        android:layout_marginLeft="255dp"/>

</RelativeLayout>