<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_testspinner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/homeback1"
    tools:context="com.example.sharma.vertosacademy.Program_ListActivity.Programlist">

    <RelativeLayout
        android:id="@+id/show_spinner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:alpha="0.6"
        android:background="@drawable/spinner_back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="Select Your School"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="28dp"/>

        <Spinner
            android:id="@+id/schoolname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:background="#fff"
            android:spinnerMode="dialog"/>


    </RelativeLayout>

    <GridView
        android:id="@+id/gridview_department"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="1"
        android:elevation="10dp"
        android:padding="5dp"
        android:verticalSpacing="10dp"/>
</LinearLayout>
