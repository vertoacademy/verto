<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/fragmentholder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context="com.example.sharma.vertosacademy.Drawer_Activity.Homepage_fragment">

    <LinearLayout
        android:id="@+id/slide"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/swipe1"
            android:layout_marginTop="12dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/slide">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <GridView
                android:id="@+id/grid_menu"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:horizontalSpacing="10dp"
                android:numColumns="2"
                android:padding="20dp"
                android:verticalSpacing="10dp" />


        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/tutorials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_button"
        android:drawableRight="@drawable/tutorial_logo"
        android:text="Click Here To Read Tutorials"
        android:textColor="#fff"
        android:textSize="15dp" />


</RelativeLayout>
