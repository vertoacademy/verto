<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/app_bar"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sharma.vertosacademy.Drawer_Activity.Answer_fragment"
    tools:showIn="@layout/fragment_answer_fragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/user_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_of_signin_gmail"
            android:clickable="true"
            android:text="Answer"
            android:textColor="#fff"
            android:textSize="15sp" />

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_answer"
            android:layout_marginTop="10dp"/>

    </LinearLayout>


</RelativeLayout>