<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homeback1"
    android:padding="20dp"
    tools:context="com.example.sharma.vertosacademy.Drawer_Activity.Sharepage">
    <TextView
        android:id="@+id/tv_reach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:text="Reach Us"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_facebook"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tv_reach"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:drawableLeft="@drawable/ic_facbook"
        android:clickable="true"
        android:drawablePadding="15dp"
        android:elevation="10dp"
        android:padding="10dp"
        android:text="facebook"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#7e7a7a"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_google"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/btn_facebook"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:clickable="true"
        android:drawablePadding="15dp"
        android:elevation="10dp"
        android:drawableLeft="@drawable/ic_googleplus"
        android:padding="10dp"
        android:text="Google +"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#7e7a7a"
        android:textSize="18sp" />


    <Button
        android:id="@+id/btn_twitter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/btn_google"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:clickable="true"
        android:drawablePadding="15dp"
        android:elevation="20dp"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_twitter"
        android:text="Twitter"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#7e7a7a"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_share_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_twitter"
        android:layout_marginTop="40dp"
        android:text="Share Us"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_share"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tv_share_title"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:drawableLeft="@drawable/ic_menu_share1"
        android:drawablePadding="15dp"
        android:text="Share this app"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#7e7a7a"
        android:textSize="18sp"
        android:padding="10dp"/>


    <Button
        android:id="@+id/btn_rating"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:drawablePadding="15dp"
        android:text="Rate this app"
        android:drawableLeft="@drawable/ic_rating"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#7e7a7a"
        android:textSize="18sp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/tv_rate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_rating"
        android:layout_marginBottom="10dp"
        android:text="Rate it"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20sp"/>

</RelativeLayout>
