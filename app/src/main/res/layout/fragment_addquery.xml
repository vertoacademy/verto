<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homeback1"
    tools:context="com.example.sharma.vertosacademy.Drawer_Activity.Addquery">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="660dp">

        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:text="New Queries"
            android:textColor="#fff"
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/query_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/heading"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edit"
            android:focusableInTouchMode="true"
            android:hint="Write query title!"
            android:padding="20dp"
            android:textColor="#fff"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/query_discription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/query_title"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_edit"
            android:focusableInTouchMode="true"
            android:hint="Write here your  Query description!"
            android:padding="20dp"
            android:textColor="#fff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/query_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/query_discription"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_of_signin_gmail"
            android:padding="10dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="15dp" />
    </RelativeLayout>

</ScrollView>
