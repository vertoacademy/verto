<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/rounded_edit">

    <ImageView
        android:id="@+id/userimage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/step"
        android:padding="2dp" />


    <TextView
        android:id="@+id/query_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/userimage"
        android:text="Query title" />

    <TextView
        android:id="@+id/query_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/query_title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/userimage"
        android:text="Query Description"/>

    <TextView
        android:id="@+id/userasked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Asked By"
        android:gravity="right"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/query_description" />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:layout_marginTop="5dp"
        android:layout_below="@id/userasked"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YYYY/MM/DD"
        android:gravity="right"
        android:layout_below="@id/name"
        android:layout_marginTop="5dp"
        android:layout_alignParentEnd="true" />


</RelativeLayout>